{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "lib": ["es5", "es6", "es2015", "es2016", "es2017", "dom"],
    "typeRoots": [],
    "types": [
      "node"
    ]
  }
}
