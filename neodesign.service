# systemctl enable /opt/neodesign/neo-design/neodesign.service
[Unit]
 Description = Neoflex Design Service

[Service]
 Type = forking
 Restart=always
 RestartSec=1
 SuccessExitStatus=143
 ExecStart = /opt/neodesign/neo-design/neodesign.sh install
 ExecStart = /opt/neodesign/neo-design/neodesign.sh start
 ExecStop = /opt/neodesign/neo-design/neodesign.sh stop
 ExecReload = /opt/neodesign/neo-design/neodesign.sh restart

[Install]
 WantedBy=multi-user.target
